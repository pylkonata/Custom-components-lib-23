{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"prettier"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"parser": "@typescript-eslint/parser",
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"prettier"
	],
	"ignorePatterns": [
		"*.d.ts"
	],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 100,
				"trailingComma": "es5",
				"semi": true,
				"jsxSingleQuote": true,
				"singleQuote": true,
				"useTabs": true,
				"tabWidth": 2,
				"endOfLine": "auto",
				"max-len": [
					"error",
					{
						"code": 100
					}
				]
			}
		]
	}
}
